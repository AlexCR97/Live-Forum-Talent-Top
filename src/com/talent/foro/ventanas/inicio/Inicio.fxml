<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.talent.foro.ventanas.inicio.InicioController"
    prefWidth="800"
    prefHeight="600" >
    
    <stylesheets>
        <String fx:value="com/talent/foro/estilos/dimensiones.css"/>
        <String fx:value="com/talent/foro/estilos/fondos.css"/>
        <String fx:value="com/talent/foro/estilos/texto.css"/>
    </stylesheets>
    
    <children>
        
        <!-- menu bar -->
        <HBox
            alignment="CENTER_LEFT"
            spacing="10"
            styleClass="padding-chico">
            <Label fx:id="lbUsuario" text="Usuario"/>
            <Button fx:id="btCerrarSesion" text="Cerrar SesiÃ³n"/>
        </HBox>
        
        <!-- main container -->
        <VBox
            VBox.vgrow="ALWAYS">
            <children>

                <!-- chat history -->
                <ScrollPane
                    fx:id="scrollMensajes"
                    SplitPane.resizableWithParent="true"
                    VBox.vgrow="ALWAYS"
                    fitToHeight="true"
                    fitToWidth="true"
                    styleClass="padding-chico">

                    <content>
                        <StackPane fx:id="spMensajes"/>
                    </content>

                </ScrollPane><!-- chat history -->

                <!-- user input -->
                <HBox
                    styleClass="padding-chico">
                    <children>
                        <TextField fx:id="tfMensaje" HBox.hgrow="ALWAYS"/>
                        <Pane prefWidth="10"/> 
                        <Button fx:id="btEnviar" text="Enviar"/>
                    </children>
                </HBox><!-- user input -->

            </children>
        </VBox><!-- main container -->
            
    </children>
</VBox>
